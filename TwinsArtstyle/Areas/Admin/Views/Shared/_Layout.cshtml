<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/admin_Layout.css">
    <link rel="stylesheet" href="~/css/admin.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Sansita+Swashed:wght@300&family=Space+Mono&display=swap" rel="stylesheet">
    <title>@ViewData["Title"]</title>
</head>
<body>
    <div class="header-container">
        <h1>Admin</h1>
        <div class="admin-menu">
            <div class="top-nav-item border-right pointer-cursor">
                <a asp-area="Main" asp-controller="User" asp-action="Logout" class="nav-text">Log Out</a>
                <i class="bi bi-door-open-fill icon"></i>
            </div>
            <div class="top-nav-item border-right pointer-cursor">
                <a asp-area="Main" asp-controller="Home" asp-action="Index" class="nav-text">Home</a>
                <i class="bi bi-house-door-fill icon"></i>
            </div>
            <div class="top-nav-item border-right pointer-cursor">
                <i class="bi bi-basket-fill icon"></i>
                <span class="nav-text">Orders</span>
                <i class="bi bi-arrow-down-short icon"></i>
            </div>
            <div class="top-nav-item border-right pointer-cursor">
                <i class="bi bi-inbox-fill icon"></i>
                <span class="nav-text">Inbox</span>
                <i class="bi bi-arrow-down-short icon"></i>
            </div>
            <div class="top-nav-item pointer-cursor">
                <i class="bi bi-person-fill icon" id="profile-icon"></i>
                <span id="admin-profile" class="nav-text">@User.Identity.Name</span>
            </div>
        </div>
    </div>
    <div class="left-menu-bar">
        <div class="item">
            <span class="left-nav-text pointer-cursor">Info</span>
        </div>
        <div class="item">
            <a asp-area="Admin" asp-controller="Products" asp-action="Manage" class="left-nav-text pointer-cursor">Products</a>
        </div>
        <div class="item">
            <a asp-area="Admin" asp-action="Registered" asp-controller="Users" class="left-nav-text pointer-cursor">Users</a>
        </div>
        <div class="item">
            <a asp-area="Admin" asp-controller="Orders" asp-action="All" class="left-nav-text pointer-cursor">Orders</a>
        </div>
        <div class="item">
            <a asp-area="Admin" asp-controller="Inbox" asp-action="All" class="left-nav-text pointer-cursor">Inbox</a>
        </div>
        <div class="item">
            <a asp-area="Admin" asp-controller="Roles" asp-action="Manage" class="left-nav-text pointer-cursor">Manage Roles</a>
        </div>
        <div class="item">
            <a asp-area="Admin" asp-controller="Administrators" asp-action="Add" class="left-nav-text pointer-cursor">Administrators</a>
        </div>
    </div>

    <div class="content-wrapper">
        @RenderBody()
    </div>
</body>
</html>