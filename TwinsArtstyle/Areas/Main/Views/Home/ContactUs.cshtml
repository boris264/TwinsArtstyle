@model ContactUsViewModel

@{
    ViewData["Title"] = "Contact Us";
}

<div class="contact-form">
    <h2 class="form-heading">@ViewData["Title"]</h2>
    <form asp-controller="Home" asp-action="ContactUs" method="post">
        <div class="form-floating">
            <label asp-for="Title" class="form-label"></label>
            <input asp-for="Title" class="form-control" aria-required="true" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <label asp-for="Content" class="form-label"></label>
            <textarea spellcheck="false" asp-for="Content" class="form-control" id="contact-form-body" aria-required="true"></textarea>
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>
        <div class="submit-button-container">
            <button id="login-submit" class="submit" type="submit">Send</button>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    </form>
</div>