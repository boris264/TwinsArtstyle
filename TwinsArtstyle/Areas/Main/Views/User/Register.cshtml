@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="register-card account-card">
    <h2 class="form-heading">@ViewData["Title"]</h2>
    <form id="registerForm" asp-route-returnUrl="" method="post">
            <h2>Create a new account.</h2>
            <hr />
            <br />
            <div class="form-floating">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" class="form-control" autocomplete="username" aria-required="true" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <label asp-for="LastName"></label>
                <input asp-for="LastName" class="form-control" aria-required="true" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" aria-required="true" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" class="form-control" aria-required="true" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="submit-button-container">
                <button id="registerSubmit" type="submit" class="submit">Register</button>
            </div>
        </form>
</div>