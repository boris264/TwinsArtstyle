@model IEnumerable<OrderViewModel>

@{
    ViewData["Title"] = "All orders";
}

<div class="orders-card">

    @foreach (var order in Model)
    {
        <div class="order">
            <span class="order-id">Order #@order.Id.ToString()</span>
            <span class="order-price">Price: @order.TotalPrice лв.</span>
            <span class="address-name">Address used: @order.AddressName</span>
            <span class="order-status">Status: @order.OrderStatus.ToString()</span>
            <a asp-area="Main" asp-controller="Orders" asp-action="Details" asp-route-orderId="@order.Id" class="order-details-button">Order details</a>
        </div>
    }

</div>