@model IEnumerable<CartProductViewModel>

<div class="cart-items">
    <ul class="items">

        @foreach (var item in Model)
        {
            <li class="cart-item" id="@item.Product.Id">
                <img src="@item.Product.ImageUrl" class="item-image">
                <span class="item-name">@item.Product.Name</span>
                <input type="number" class="quantity" value="@item.Count" max="99">
                <i class="remove-item bi bi-trash-fill"></i>
            </li>
        }

    </ul>
    <br />

    @if (Model.Count() > 0)
    {
        <hr />
        <div class="order-button-container">
            <button type="submit" class="order-button">Place order</button>
        </div>
    }

</div>